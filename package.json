  "bugs": {
    "url": "https://github.com/chanjs/react-cli/issues"
  },
  "homepage": "https://github.com/chanjs/react-cli#readme",
  "dependencies": {
    "commander": "^9.2.0",
    "esbuild": "^0.14.36",
    "express": "^4.17.3",
    "portfinder": "^1.0.28",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.3"
  }
}
